<Page x:Class="CarApp.Pages.LabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ГИБДД - задание"
      Height="650" Width="1000"
      Background="White">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

        <Label Content="Марка:" HorizontalAlignment="Left" 
               VerticalAlignment="Top" Margin="102,10,0,0"/>
        <TextBox x:Name="BrandTextBox" 
                 Margin="26,37,0,0" Width="200" 
                 HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Label Content="Цвет:" HorizontalAlignment="Left" 
               VerticalAlignment="Top" 
               Margin="345,10,0,0"/>

        <TextBox x:Name="ColorTextBox" 
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top" 
                 Margin="266,37,0,0" Width="200"/>

        <Button Content="Поиск" 
                VerticalAlignment="Top" 
                Margin="0,75,0,0" Width="125" Click="SearchButton_Click"/>

        <ListBox x:Name="ResultsListBox" 
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top" 
                 Margin="10,110,0,0" Width="485" Height="200"/>
    </Grid>
</Page>
